<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"


    android:orientation="vertical">

    <com.example.quizzle.CustomScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="false"
        app:layout_constraintBottom_toTopOf="@+id/hintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageQuestion"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/q1" />

            <TextView
                android:id="@+id/questionView"
                style="@style/QuestionStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arial"
                android:text="Вопрос" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/progressBar1"
                    style="@style/ProgressStyle"
                    app:layout_constraintTop_toTopOf="@id/button1"
                    app:layout_constraintBottom_toBottomOf="@id/button1"
                    app:layout_constraintStart_toStartOf="@id/button1"
                    app:layout_constraintEnd_toEndOf="@id/button1"
                    />

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/progressBar2"
                    style="@style/ProgressStyle"
                    app:layout_constraintTop_toTopOf="@id/button2"
                    app:layout_constraintBottom_toBottomOf="@id/button2"
                    app:layout_constraintStart_toStartOf="@id/button2"
                    app:layout_constraintEnd_toEndOf="@id/button2"
                    />
                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/progressBar3"
                    style="@style/ProgressStyle"
                    app:layout_constraintTop_toTopOf="@id/button3"
                    app:layout_constraintBottom_toBottomOf="@id/button3"
                    app:layout_constraintStart_toStartOf="@id/button3"
                    app:layout_constraintEnd_toEndOf="@id/button3"
                    />
                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/progressBar4"
                    style="@style/ProgressStyle"
                    app:layout_constraintTop_toTopOf="@id/button4"
                    app:layout_constraintBottom_toBottomOf="@id/button4"
                    app:layout_constraintStart_toStartOf="@id/button4"
                    app:layout_constraintEnd_toEndOf="@id/button4"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button1"
                    style="@style/ButtonStyle"
                    android:layout_width="match_parent"
                    android:text="Ответ1"


                    app:layout_constraintBottom_toTopOf="@+id/button2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />



                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button2"
                    style="@style/ButtonStyle"
                    android:layout_width="match_parent"
                    android:text="Ответ2"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/button1"


                    app:layout_constraintBottom_toTopOf="@+id/button3"
                    app:layout_constraintEnd_toEndOf="parent" />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button3"
                    style="@style/ButtonStyle"
                    android:text="Ответ3"
                    android:layout_width="match_parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/button2"
                    app:layout_constraintBottom_toTopOf="@+id/button4"
                    tools:layout_editor_absoluteX="12dp" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button4"
                    style="@style/ButtonStyle"
                    android:text="Ответ3"
                    android:layout_width="match_parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/button3"

                    tools:layout_editor_absoluteX="12dp" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <LinearLayout
                android:id="@+id/linearDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:layout_marginStart="@dimen/divider_margin_start"

                    android:layout_marginTop="@dimen/divider_margin_top"
                    android:layout_marginEnd="@dimen/divider_margin_end"
                    android:background="?android:attr/listDivider"

                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/textDescription"
                    style="@style/DescriptionStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible" />
            </LinearLayout>

        </LinearLayout>


    </com.example.quizzle.CustomScrollView>

    <LinearLayout
        android:id="@+id/hintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nestedScrollView">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonPeople"
            style="@style/HintStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/button_margin"
            android:layout_weight="1"
            android:drawableLeft="@drawable/people_32px"
            android:text="Button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button2chance"
            style="@style/HintStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:drawableLeft="@drawable/dices_32px"
            android:text="Button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button50percent"
            style="@style/HintStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:drawableLeft="@drawable/percent50_32px"
            android:layout_marginEnd="@dimen/button_margin"




            android:text="Button" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>