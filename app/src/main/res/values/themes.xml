<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Quizzle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/correct_answer</item>
        <item name="colorPrimaryVariant">@color/background_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">"@font/arial"</item>

    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">2sp</item>
        <item name="android:layout_marginStart">@dimen/button_margin</item>
        <item name="android:layout_marginEnd">@dimen/button_margin</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/button_color</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">@dimen/buttons_padding_start</item>
        <item name="android:letterSpacing">.01</item>
        <item name="android:textStyle">normal</item>
        <item name="android:insetBottom">@dimen/buttons_inset</item>
        <item name="android:insetTop">@dimen/buttons_inset</item>


    </style>

    <style name="QuestionStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginStart">@dimen/question_margin_start</item>
        <item name="android:layout_marginBottom">@dimen/question_margin_bottom</item>
        <item name="android:layout_marginTop">@dimen/question_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/question_margin_end</item>
        <item name="android:textSize">@dimen/question_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

        <style name="DescriptionStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginStart">@dimen/description_margin_start</item>
        <item name="android:layout_marginBottom">@dimen/description_margin_bottom</item>
        <item name="android:layout_marginTop">@dimen/description_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/description_margin_end</item>
        <item name="android:textSize">@dimen/description_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="HintStyle" parent="Widget.MaterialComponents.Button">
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">2sp</item>
        <item name="android:layout_marginStart">@dimen/hint_margin</item>
        <item name="android:layout_marginEnd">@dimen/hint_margin</item>
        <item name="android:gravity">end|top</item>
        <item name="android:textSize">@dimen/hint_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/hint_color</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">@dimen/hint_padding_start_end</item>
        <item name="android:paddingEnd">@dimen/hint_padding_start_end</item>
        <item name="android:paddingTop">@dimen/hint_padding_top_bottom</item>
        <item name="android:paddingBottom">@dimen/hint_padding_top_bottom</item>
        <item name="android:letterSpacing">.01</item>
        <item name="android:textStyle">normal</item>
        <item name="android:insetBottom">@dimen/buttons_inset</item>
        <item name="android:insetTop">@dimen/buttons_inset</item>
    </style>

    <style name="ProgressStyle" parent="Widget.MaterialComponents.LinearProgressIndicator">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_marginStart">@dimen/button_margin</item>
        <item name="android:layout_marginEnd">@dimen/button_margin</item>
        <item name="trackCornerRadius">4dp</item>
        <item name="indicatorColor">@color/white</item>
        <item name="trackThickness">48dp</item>
        <item name="android:indeterminate">false</item>
        <item name="android:progressBackgroundTint">@color/button_color</item>
    </style>



</resources>